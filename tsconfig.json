{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "experimentalDecorators": true,  
    "emitDecoratorMetadata": true
  },
"include": [
  "src/**/*.ts",
  "prisma/**/*.ts", 
  "prisma/**/*.d.ts"
]
}
